<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th><%= Card.human_attribute_name :name %></th>
      <th><%= Card.human_attribute_name :rate %></th>
      <th><%= Card.human_attribute_name :group %></th>
      <th><%= Card.human_attribute_name :attack %></th>
      <th><%= Card.human_attribute_name :intellect %></th>
      <th><%= Card.human_attribute_name :suppression %></th>
      <th><%= Card.human_attribute_name :comment %></th>
      <th><%= Card.human_attribute_name :image %></th>
      <th><%= Card.human_attribute_name :cost %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.name %></td>
        <td><%= card.rate %></td>
        <td><%= card.group %></td>
        <td><%= card.attack %></td>
        <td><%= card.intellect %></td>
        <td><%= card.suppression %></td>
        <td><%= card.comment %></td>
        <td><%= card.image %></td>
        <td><%= card.cost %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

