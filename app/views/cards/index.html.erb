<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rate</th>
      <th>Group</th>
      <th>Attack</th>
      <th>Intellect</th>
      <th>Suppression</th>
      <th>Comment</th>
      <th>Image</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.name %></td>
        <td><%= card.rate %></td>
        <td><%= card.group %></td>
        <td><%= card.attack %></td>
        <td><%= card.intellect %></td>
        <td><%= card.suppression %></td>
        <td><%= card.comment %></td>
        <td><%= card.image %></td>
        <td><%= card.cost %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
